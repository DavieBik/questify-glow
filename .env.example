# SkillBridge Single-Tenant Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# REQUIRED: Organization Configuration
# =============================================================================

# Unique organization ID (generate a UUID for each deployment)
VITE_ORG_ID=00000000-0000-0000-0000-000000000001

# Organization details
VITE_ORG_NAME=SkillBridge Learning
VITE_ORG_SLUG=skillbridge
VITE_ORG_CONTACT_EMAIL=admin@skillbridge.com.au

# =============================================================================
# Application URLs
# =============================================================================

# Main application URL (where your app is deployed)
VITE_APP_URL=https://skillbridge.com.au
VITE_APP_DOMAIN=skillbridge.com.au

# =============================================================================
# Branding & Customization
# =============================================================================

# Organization branding
VITE_ORG_LOGO_URL=
VITE_ORG_PRIMARY_COLOR=#059669
VITE_ORG_FAVICON_URL=/favicon.ico

# =============================================================================
# Email Configuration
# =============================================================================

# Email settings for system notifications
VITE_SMTP_FROM=SkillBridge <noreply@skillbridge.com.au>
VITE_SUPPORT_EMAIL=support@skillbridge.com.au

# =============================================================================
# Subscription & Limits
# =============================================================================

# Subscription plan and user limits
VITE_SUBSCRIPTION_PLAN=enterprise
VITE_MAX_USERS=999

# =============================================================================
# Feature Flags
# =============================================================================

# Enable strict single-tenant mode (removes organization_id columns)
VITE_SINGLE_TENANT_STRICT=false

# Allow new user signups
VITE_ENABLE_SIGNUP=true

# Enable role preview for development (default: false)
VITE_ENABLE_ROLE_PREVIEW=false

# =============================================================================
# Default Admin User (for initial setup)
# =============================================================================

VITE_DEFAULT_ADMIN_EMAIL=admin@skillbridge.com.au
VITE_DEFAULT_ADMIN_PASSWORD=SkillBridge2024!
VITE_DEFAULT_ADMIN_FIRST_NAME=System
VITE_DEFAULT_ADMIN_LAST_NAME=Administrator

# =============================================================================
# Supabase Configuration (keep your existing values)
# =============================================================================

# These should match your Supabase project settings
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# Optional: Database & External Services
# =============================================================================

# If using external database (optional)
DATABASE_URL=postgresql://user:password@host:port/database

# External service keys (if needed)
RESEND_API_KEY=
STRIPE_SECRET_KEY=