# SkillBridge Single-Tenant Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# REQUIRED: Organization Configuration
# =============================================================================

# Unique organization ID (generate a UUID for each deployment)
ORG_ID=00000000-0000-0000-0000-000000000001

# Organization details
ORG_NAME=SkillBridge Learning
ORG_SLUG=skillbridge
ORG_CONTACT_EMAIL=admin@skillbridge.com.au

# =============================================================================
# Application URLs
# =============================================================================

# Main application URL (where your app is deployed)
APP_URL=https://skillbridge.com.au
APP_DOMAIN=skillbridge.com.au

# =============================================================================
# Branding & Customization
# =============================================================================

# Organization branding
ORG_LOGO_URL=
ORG_PRIMARY_COLOR=#059669
ORG_FAVICON_URL=/favicon.ico

# =============================================================================
# Email Configuration
# =============================================================================

# Email settings for system notifications
SMTP_FROM=SkillBridge <noreply@skillbridge.com.au>
SUPPORT_EMAIL=support@skillbridge.com.au

# =============================================================================
# Subscription & Limits
# =============================================================================

# Subscription plan and user limits
SUBSCRIPTION_PLAN=enterprise
MAX_USERS=999

# =============================================================================
# Feature Flags
# =============================================================================

# Enable strict single-tenant mode (removes organization_id columns)
SINGLE_TENANT_STRICT=false

# Allow new user signups
ENABLE_SIGNUP=true

# =============================================================================
# Default Admin User (for initial setup)
# =============================================================================

DEFAULT_ADMIN_EMAIL=admin@skillbridge.com.au
DEFAULT_ADMIN_PASSWORD=SkillBridge2024!
DEFAULT_ADMIN_FIRST_NAME=System
DEFAULT_ADMIN_LAST_NAME=Administrator

# =============================================================================
# Supabase Configuration (keep your existing values)
# =============================================================================

# These should match your Supabase project settings
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# Optional: Database & External Services
# =============================================================================

# If using external database (optional)
DATABASE_URL=postgresql://user:password@host:port/database

# External service keys (if needed)
RESEND_API_KEY=
STRIPE_SECRET_KEY=